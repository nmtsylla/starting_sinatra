
<div id="logo">
  <h1 class="byline">Les dernieres posts</h1>
</div>

<% @notes.each do |note| %>

	<article class="is-post is-post-excerpt">
		<header>		
			<h2><a href="/message/<%= note.id %>"><%= note.title %></a></h2>
			<span class="byline">Dinama nekh</span>
		</header>
		<div class="info">
			
			<span class="date"><span class="month"><%= note.created_at.strftime('%B')[0,3] %><span>uary</span></span> <span class="day"><%= note.created_at.day %></span><span class="year">, <%= note.created_at.year %></span></span>
			
			<ul class="social-likes social-likes_vertical stats" data-url="http://localhost:4567/message/<%= note.id %>">
				<li><a href="#" class="fa fa-comment">16</a></li>
				<li><a href="/dinama_nekh/<%= note.id %>" class="fa fa-heart"><%= note.dinama_nekh %></a></li>
				<li class="twitter" title="Share link on Twitter">Twitter</li>
				<li class="fb-share-button" title="Share link on Facebook" data-href="http://localhost.com/dinama_nekh/<%= note.id %>">Facebook</li>
                <div class="fb-share-button" data-href="http://localhost.com/dinama_nekh/<%= note.id %>" data-type="button"></div>
			</ul>
		</div>		
		<p>
			<%= note.content %>
		</p>
      <span>Author <%= note.user.nickname %></span>
	</article>
<% end %>



